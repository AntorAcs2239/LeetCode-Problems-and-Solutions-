class Solution {
public:
    long long maximumImportance(int n, vector<vector<int>>& roads) {
        vector<int>graph[n+5];
        int val[n+5];
        for(int i=0;i<=n;i++)
        {
            val[i]=0;
        }
        for(int i=0;i<roads.size();i++)
        {
            int u=roads[i][0];
            int v=roads[i][1];
            graph[u].push_back(v);
            graph[v].push_back(u);
            val[u]++;
            val[v]++;
        }
        vector<pair<int,int>>vec;
        for(int i=0;i<n;i++)
        {
            vec.push_back({val[i],i});
        }
        sort(vec.begin(),vec.end(),greater<pair<int,int>>());
        int k=n;
        for(int i=0;i<n;i++)
        {
            val[vec[i].second]=k;
            k--;
        }
        long long ans=0;
        for(int i=0;i<n;i++)
        {
            for(auto x:graph[i])
            {
                if(x>i)ans+=val[i]+val[x];
            }
        }
        return ans;
    }
};
class Solution {
public:
    int findCircleNum(vector<vector<int>>& matrix) {
        int n=matrix.size();
        int vis[n+5];
        vector<int>graph[n+5];
        for(int i=0;i<=n;i++)vis[i]=0;
        int ans=0;
        for(int i=0;i<n;i++)
        {
            for(int j=0;j<n;j++)
            {
                if(matrix[i][j]==1)graph[i].push_back(j);
            }
        }
        for(int i=0;i<n;i++)
        {
            if(vis[i]==0)
            {
                ans++;
                //BFS
                queue<int>q;
                q.push(i);
                vis[i]=1;
                while(!q.empty())
                {
                    int f=q.front();
                    q.pop();
                    for(auto x:graph[f])
                    {
                        if(vis[x]==0)
                        {
                            q.push(x);
                            vis[x]=1;
                        }
                    }
                }
                //BFS
            }
        }
        return ans;
    }
};